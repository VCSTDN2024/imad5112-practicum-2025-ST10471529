<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailedView">

    <Button
        android:id="@+id/displaySongs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="| DISPLAY THE LIST OF SONGS |"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="122dp" />

    <Button
        android:id="@+id/CalulateAndDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="| DISPLAY THE RATING |"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="282dp" />

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="| RETURN TO MAIN SCREEN |"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="446dp" />

    <TextView
        android:id="@+id/displayView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Displays the list of songs here:"
        android:text=""
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="200dp" />

    <TextView
        android:id="@+id/displayView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Displays the average rating here:"
        android:text=""
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="356dp" />
</androidx.constraintlayout.widget.ConstraintLayout>